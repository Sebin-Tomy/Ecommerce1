<script>
    function handleSearch() {
        const searchTerm = document.getElementById("searchInput").value.trim();
        const urlParams = new URLSearchParams(window.location.search);
        urlParams.set("search", searchTerm); // Add or update the search parameter
        urlParams.set("page", 1); // Reset to the first page when searching

        // Reload the page with the updated URL
        window.location.search = urlParams.toString();
    }
</script>
<script>
    function handleApprovalRequest(orderId) {
        swal({
            title: "Are you sure?",
            text: "Do you want to request approval for return?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
        .then((willRequest) => {
            if (willRequest) {
                fetch('/admin/submitReturn1', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ orderId: orderId }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        swal("Success!", "Approval request sent.", "success");
                        window.location.reload()
                        
                        // Optionally, update the UI to reflect the change in status
                    } else {
                        swal("Error!", "Failed to send approval request.", "error");
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    swal("Error!", "Failed to send approval request.", "error");
                });
            } else {
                swal("Approval request canceled.");
            }
        });
    }
</script>

