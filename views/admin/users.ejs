    <script>
    function blockUser(userId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'This user will be blocked!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, block it!',
                cancelButtonText: 'Cancel',
              }).then((result) => {
                if (result.isConfirmed) {
                    let request = {method : 'PATCH'}
                    // Send AJAX request to block user
                    fetch(`/admin/block-user/${userId}`,request)
                        .then(response => {
                            if (response.ok) {
                                Swal.fire('Blocked!', `The user has been blocked${userId}.`, "success");
                                // Reload the page after blocking
                                location.reload();
                            } else {
                                throw new Error('Failed to block user.');
                            }
                        })
                        .catch(error => {
                            console.log("Adfdssf")
                            console.error(error);
                            Swal.fire('Error!', 'Failed to block user.', 'error');
                        });
                }
            });
        }
