    <script>
        document.getElementById('editproduct').addEventListener('submit', function (e) {
            e.preventDefault(); // Prevent form submission
    
            // Clear previous errors
            document.querySelectorAll('.error-message').forEach(el => el.remove());
    
            let errors = 0;
    
            // Helper function to show errors
            function showError(inputId, message) {
                const inputField = document.getElementById(inputId) || document.querySelector(`[name="${inputId}"]`);
                const errorElement = document.createElement('p');
                errorElement.className = 'error-message';
                errorElement.style.color = 'red';
                errorElement.innerText = message;
                inputField.parentElement.appendChild(errorElement);
                errors++;
            }
    
            // Validate fields
            const productName = document.getElementById('product_title').value.trim();
            if (!productName) {
                showError('product_title', 'Product title is required.');
            }
    
            const color = document.getElementById('product_color').value.trim();
            if (!color) {
                showError('product_color', 'Color is required.');
            }
    
            const description = document.getElementById('description').value.trim();
            if (!description) {
                showError('description', 'Description is required.');
            }
    
            const categoryElement = document.querySelector('[name="category"]');
            const categoryValue = categoryElement.value;
            console.log(categoryElement.value);
            if (!categoryValue || categoryValue.trim() === "") {
                showError('category', 'A category must be selected.');
            } else if (categoryValue === " ") {
                showError('category', 'No category assigned. Please select a category.');
            }
    
            const price = document.querySelector('[name="productprice"]').value.trim();
            if (!price) {
                showError('product_price', 'Price is required.');
            } else if (isNaN(price)) {
                showError('product_price', 'Price must be a number.');
            } else if (parseFloat(price) <= 0) {
                showError('product_price', 'Price must be a positive value.');
            }
    
            const stock = document.querySelector('[name="stock"]').value.trim();
            if (!stock) {
                showError('product_stock', 'Stock is required.');
            } else if (isNaN(stock)) {
                showError('product_stock', 'Stock must be a number.');
            } else if (parseInt(stock) < 0) {
                showError('product_stock', 'Stock must be a positive value.');
            }
    
            // Submit the form if no errors
            if (errors === 0) {
                this.submit();
            }
        });
    </script>
    
    
