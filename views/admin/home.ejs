    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Define months
            const months = [
                "January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"
            ];
    
            // Monthly Chart
            const monthlyData = JSON.parse(document.getElementById("monthlySalesData").value);
    
          
            const monthlyDataMap = new Map(monthlyData.map(item => [item._id, item.totalSales]));
    
            const monthlyDataFilled = months.map((_, index) => ({
                month: months[index], 
                totalSales: monthlyDataMap.get(index + 1) || 0 
            }));
    
            const monthlyCtx = document.getElementById("monthlyChart").getContext("2d");
            new Chart(monthlyCtx, {
                type: "line",
                data: {
                    labels: months, 
                    datasets: [{
                        label: "Monthly Sales",
                        data: monthlyDataFilled.map(item => item.totalSales), 
                        backgroundColor: "rgba(44, 120, 220, 0.2)",
                        borderColor: "rgba(44, 120, 220)",
                        tension: 0.3,
                        fill: true,
                    }],
                },
                options: {
                    plugins: {
                        legend: { display: true, position: "top" },
                    },
                },
            });
    
            // Yearly Chart
           
            const years = JSON.parse(document.getElementById("yearlySalesLabels").value); // Years (e.g., 2020, 2021, ...)
            const yearlyData = JSON.parse(document.getElementById("yearlySalesData").value); // Data (e.g., total sales)
    
            const yearlyCtx = document.getElementById("yearlyChart").getContext("2d");
            new Chart(yearlyCtx, {
                type: "line",
                data: {
                    labels: years, // Use the predefined labels
                    datasets: [{
                        label: "Yearly Sales",
                        data: yearlyData, // Use the provided data
                        backgroundColor: "rgba(44, 120, 220, 0.2)",
                        borderColor: "rgba(44, 120, 220)",
                        tension: 0.3,
                        fill: true,
                    }],
                },
                options: {
                    plugins: {
                        legend: { display: true, position: "top" },
                    },
                },
            });
        });
    </script>
    
