<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Evara Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="/imgs/theme/favicon.svg">
    <link href="/css/main.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .small-link {
            text-decoration: underline;
            color: #007bff;
            cursor: pointer;
        }
        .small-link:hover {
            color: #0056b3;
        }
    </style>
</head>
<body>
<main>
    <header class="main-header style-2 navbar">
        <div class="col-brand">
            <a href="home.ejs" class="brand-wrap">
                <img src="/imgs/theme/logo.svg" class="logo" alt="Evara Dashboard">
            </a>
        </div>
    </header>
    <section class="content-main mt-80 mb-80">
        <div class="card mx-auto card-login">
            <div class="card-body">
                <h4 class="card-title mb-4">Enter email</h4>
                <form id="forgotForm" method="POST" action='/forgot'>
                    <div class="mb-3">
                        Enter email
                        <input class="form-control" name="email" id="email" placeholder="Email" type="email">
                        <span id="emailError" style="color:red;display:none;">Email is required and must be valid</span>
                    </div>
                    <% if (typeof message !== 'undefined') { %>
                        <span style="color: red;"><%= message %></span>
                    <% } %>
                    <div class="mb-4">
                        <button type="submit" value="submit" class="btn btn-primary w-100">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<script src="/js/vendors/jquery-3.6.0.min.js"></script>
<script src="/js/vendors/bootstrap.bundle.min.js"></script>
<script src="/js/vendors/jquery.fullscreen.min.js"></script>
<script src="/js/main.js" type="text/javascript"></script>
<script>
    document.getElementById('forgotForm').addEventListener('submit', function (event) {
        var email = document.getElementById('email').value.trim();
        var emailError = document.getElementById('emailError');
        
        var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;      
        var valid = true;

        if (email === "" || !emailPattern.test(email)) {
            emailError.style.display = 'block';
            valid = false;
        } else {
            emailError.style.display = 'none';
        }

        if (!valid) {
            event.preventDefault();
        }
    });
</script>
</body>
</html>